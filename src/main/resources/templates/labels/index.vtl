<!--  <input type="Submit" value="Delete all" id="deleteall">-->
<!--</form>-->
<!--  #end-->
  <form action="/" method="GET">
    <input type="Submit" value="Back to ToDos" id="backbutton">
  </form>
</div>
</body>
</html>